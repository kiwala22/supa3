<%= provide(:title, 'JackPot') %>
<h3>
	<%= "JackPot Draws" %>
</h3>
<div>
	<table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
		<thead>
			<tr>
				<th>No</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Phone Number</th>
				<th>Ticket ID</th>
				<th>Number</th>
			</tr>
		</thead>
		<tbody>
			<% $tickets.each_with_index do |ticket, i| %>
			<tr>
				<td><%= (i+1) %></td>
				<td><%= ticket.first_name %></td>
				<td><%= ticket.last_name %></td>
				<td><%= ticket.phone_number %></td>
				<td><%= ticket.reference %></td>
				<td><%= ticket.data %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<p>
		<%= link_to "JackPot", "/jackpot", class: "button expand pull-left" %>
		<%= link_to "Download CSV", "/download_tickets.csv", class: "button expand pull-right" %>
	</p>
</div>
