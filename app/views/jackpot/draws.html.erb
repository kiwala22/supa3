<%= provide(:title, "JackPot") %>
<h3>
	<%= "JackPot Results" %>
</h3>
<div>
  <table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
      <thead>
        <tr>
          <th>No</th>
					<th>First Name</th>
					<th>Last Name</th>
          <th>Phone Number</th>
          <th>Ticket ID</th>
        </tr>
      </thead>
      <tbody>
        <% @tickets.each_with_index do |ticket, i| %>
            <tr>
              <td><%= (i+1) %></td>
							<td><%= ticket.first_name %></td>
							<td><%= ticket.last_name %></td>
              <td><%= ticket.phone_number %></td>
              <td><%= ticket.reference %></td>
            </tr>
        <% end %>
      </tbody>
  </table>
</div>
<%= link_to "Back", jackpot_path, html_options = {class: "btn btn-info", method: :get} %>
