<%= provide(:title, "Broadcast Messages") %>
<h3>
	<%= "Gamers" %>
<small><%= "All Gamers" %></small>
</h3>
</h3>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
    <%= search_form_for @q, url: gamers_path, html: { method: :get } do |f| %>
      <div class="panel-body">
        <fieldset>
            <div class="col-sm-4">
              <div class="form-group">
              <%= f.label :phone_number, "PhoneNumber", class:"col-lg-4 control-label" %>
                <div class="col-lg-8">
                  <%= f.search_field :phone_number_eq, { include_blank: true, :class=>"form-control", id: "phone_number"}%>
                </div>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <%= f.label :supa3_segment, "Segment", class:"col-lg-4 control-label" %>
                <div class="col-lg-8">
                  <%= f.select :supa3_segment_eq, ('A'..'F').to_a, {:prompt => 'Select One'}, { include_blank: true, :class=>"form-control", id: "segment"}%>
                </div>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <%= f.label :phone_number, "Network", class:"col-lg-4 control-label" %>
                <div class="col-lg-8">
                  <%= f.select :phone_number_start, options_for_select([["Airtel", "25675 25670"], ["MTN", "25677 25678 25639"]]), {:prompt => 'Select One'}, {:class=>"form-control", id: "segment"}%>
                </div>
              </div>
            </div>
        </fieldset>

        <div class="pannel-footer">
            <div class="clearfix">
              <div class="pull-right">
                  <%= f.submit 'Search', :class=>'btn btn-primary' %>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
      <thead>
        <tr>
          <th>No</th>
					<th>First Name</th>
					<th>Last Name</th>
          <th>Phone Number</th>
          <th>Segment</th>
					<th>Predicted Revenue</th>
          <th>Create Time</th>
        </tr>
      </thead>
      <tbody>
        <% @gamers.each_with_index do |gamer, i| %>
            <tr>
              <td><%= (i+1) %></td>
							<td><%= gamer.first_name %></td>
							<td><%= gamer.last_name %></td>
              <td><%= gamer.phone_number %></td>
              <td><%= gamer.segment %></td>
							<td><%= gamer.predicted_revenue %></td>
              <td><%= (gamer.created_at.to_datetime.strftime("%b %d, %Y %I:%M%P")) %></td>

            </tr>
        <% end %>
      </tbody>
  </table>
  <%= paginate @gamers %>
	<p>
    <%= link_to "Download CSV", request.original_url+"&format=csv", class: "button expand pull-right" %>
	</p>
</div>
