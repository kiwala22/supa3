<%= provide(:title, "Tickets") %>
<h3>
	<%= "Tickets" %>
<small><%= "All Tickets" %></small>
</h3>
</h3>

<div class="panel panel-default">
   <%= search_form_for @q, url: tickets_path, html: { method: :get } do |f| %>
   <div class="panel-body">
      <fieldset>
        <div class="col-md-6">
          <div class="form-group">
              <%= f.label :phone_number, class:"col-lg-2 control-label" %>
              <div class="col-sm-6">
              <%= f.search_field :phone_number_eq, { include_blank: true, :class=>"form-control", id: "phone_number"}%>
              </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
              <%= f.label :ticket_id, "Ticket ID", class:"col-lg-2 control-label" %>
              <div class="col-sm-6">
              <%= f.search_field :reference_eq, { include_blank: true, :class=>"form-control", id: "ticket_id"}%>
              </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <div class="col-md-6">
          <div class="form-group">
              <%= f.label :created_at_gteq, "Created After", class:"col-lg-2 control-label" %>
              <div class="col-sm-6">
                <%= f.search_field :created_at_gteq,  id: "broadcast_schedule", class: "form-control" %>
              </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
              <%= f.label :created_at_lteq, "Created Before", class:"col-lg-2 control-label" %>
              <div class="col-sm-6">
                <%= f.search_field :created_at_lteq,  id: "broadcast_schedule_cp", class: "form-control" %>
              </div>
          </div>
        </div>
      </fieldset>
      <div class="pannel-footer">
         <div class="clearfix">
            <div class="pull-right">
               <%= f.submit 'Search', :class=>'btn btn-primary' %>
            </div>
         </div>
      </div>
   </div>
   <% end %>
</div>

<div>
  <table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
      <thead>
        <tr>
          <th><%= sort_link(@q, :No) %></th>
          <th><%= sort_link(@q, :phone_number) %></th>
          <th><%= sort_link(@q, :ticket) %></th>
          <th><%= sort_link(@q, :played) %></th>
          <th><%= sort_link(@q, :amount) %></th>
          <th><%= sort_link(@q, :data) %> </th>
          <th><%= sort_link(@q, :amount_Won) %></th>
          <th><%= sort_link(@q, :paid) %></th>
          <th><%= sort_link(@q, :time) %></th>
					<th><%= sort_link(@q, :confirmation) %></th>
        </tr>
      </thead>
      <tbody>
        <% @tickets.each_with_index do |ticket, i| %>
            <tr>
              <td><%= (i+1) %></td>
              <td><%= ticket.phone_number %></td>
              <td><%= ticket.reference %></td>
              <td><%= ticket.data %></td>
              <td><%= ticket.amount %></td>
              <td><%= ticket.number_matches %></td>
              <td><%= ticket.win_amount %></td>
              <td><%= ticket.paid %></td>
              <td><%= ticket.created_at.to_datetime.strftime("%b %d, %Y %I:%M%P") %></td>
							<td><%= ticket.confirmation %></td>

            </tr>
        <% end %>
      </tbody>
  </table>
  <%= paginate @tickets %>
</div>
