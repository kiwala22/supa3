<%= provide(:title, "Bonus Ticket Promotions") %>
<h3>
   <%= "Bonus Ticket Promotions" %>
   <small><%= "Create New Promotion" %></small>
</h3>


<div class="row">
  <div class="col-sm-4 col-centered col-md-offset-4">
    <!-- START panel-->
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(@bonus_ticket , :html => {:"data-parsley-validate" => ''}) do |f| %>
        <div class="form-group">
          <%= f.label :game, "Select Game Type", class: "text-muted" %>
          <div>
            <%= f.select :game, options_for_select([["SUPA 3", "Supa3"], ["SUPA 5", "Supa5"]]),
            {:prompt => "Select One"},{class: "form-control", :id => "game", required: true} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :segment, "Segment", class: "text-muted" %>
          <div>
            <%= f.select :segment,  options_for_select(["A", "B", "C", "D", "E", "F"]),
            {:prompt => "Select One"}, {class: "form-control", :id => "segment", required: true} %>
          </div>
        </div>
        <div class="form-group">
          <div class="large-10 columns">
            <div class="form-group">
              <%= f.label :expiry, "Expiry Time", class: "text-muted" %>
              <%= f.text_field :expiry, id: "broadcast_schedule", autofocus: true, required: "true", class: "form-control" %>
            </div>
            <%= f.submit "Submit", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- END panel-->
  </div>
</div>
