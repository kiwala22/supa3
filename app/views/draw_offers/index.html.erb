<%= provide(:title, "Promotions") %>
<h3>
   <%= "Promotions" %>
</h3>

<div>
  <table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
    <thead>
      <tr>
        <th>No</th>
        <th>Multiplier One</th>
        <th>Multiplier Two</th>
        <th>Multiplier Three</th>
        <th>Segment</th>
        <th>Expiry Time</th>
        <th>Create Time</th>
      </tr>
    </thead>
    <tbody>
      <% @draw_offers.each_with_index do |offer, i| %>
        <tr>
          <th><%= (i + 1) %></th>
          <th><%= offer.multiplier_one %></th>
          <th><%= offer.multiplier_two %></th>
          <th><%= offer.multiplier_three %></th>
          <th><%= offer.segment %></th>
          <th><%= offer.expiry_time.to_datetime.strftime("%b %d, %Y %I:%M%P") %></th>
          <th><%= offer.created_at.to_datetime.strftime("%b %d, %Y %I:%M%P") %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @draw_offers %>
</div>
