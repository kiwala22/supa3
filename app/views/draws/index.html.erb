<%= provide(:title, "Draws") %>
<h3>
	<%= "Draws" %>
<small><%= "All Draws" %></small>
</h3>
</h3>

<div class="panel panel-default">
   <%= search_form_for @q, url: draws_path, html: { method: :get } do |f| %>
   <div class="panel-body">
      <fieldset>
          <div class="form-group">
              <%= f.label :draw_time, class:"col-lg-2 control-label" %>
              <div class="col-sm-6">
              <%= f.search_field :draw_time_gteq, { include_blank: true, :class=>"form-control", id: "broadcast_schedule"}%>
              </div>
          </div>
      </fieldset>
      <div class="pannel-footer">
         <div class="clearfix">
            <div class="pull-right">
               <%= f.submit 'Search', :class=>'btn btn-primary' %>
            </div>
         </div>
      </div>
   </div>
   <% end %>
</div>

<div>
  <table class="table table-striped table-bordered table-hoverlarge-12 columns large-centered">
      <thead>
        <tr>
          <th><%= sort_link(@q, :no) %></th>
          <th><%= sort_link(@q, :draw_time) %></th>
          <th><%= sort_link(@q, :no_match) %></th>
          <th><%= sort_link(@q, :matched_1) %></th>
          <th><%= sort_link(@q, :matched_2) %></th>
          <th><%= sort_link(@q, :matched_3) %></th>
          <th><%= sort_link(@q, :ticket_count) %></th>
          <th><%= sort_link(@q, :payout) %></th>
          <th><%= sort_link(@q, :revenue) %></th>
          <th>RTP</th>
        </tr>
      </thead>
      <tbody>
        <% @draws.each_with_index do |draw, i| %>
            <tr>
              <td><%= (i+1) %></td>
              <td><%= draw.draw_time.to_datetime.strftime("%b %d, %Y %I:%M%P") %></td>
              <td><%= draw.no_match %></td>
              <td><%= draw.one_match %></td>
              <td><%= draw.two_match %></td>
              <td><%= draw.three_match %></td>
              <td><%= draw.ticket_count %></td>
              <td><%= draw.payout %></td>
              <td><%= draw.revenue %></td>
              <td><%= number_to_percentage((draw.payout / draw.revenue), precision: 2)  %></td>
            </tr>
        <% end %>
      </tbody>
  </table>
  <%= paginate @draws %>
</div>
